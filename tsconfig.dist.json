{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build-dist",
    "sourceMap": true,
    "inlineSourceMap": false
  },
  "references": [
    {
      "path": "core/injected-scripts/tsconfig.dist.json"
    },
    {
      "path": "replay/tsconfig.dist.json"
    },
    {
      "path": "emulate-browsers/base/injected-scripts/tsconfig.dist.json"
    }
  ],
  "include": ["**/*.ts", "**/*.js", "**/*.json"],
  "exclude": [
    "*jest*",
    "**/tsconfig*.json",
    "**/test",
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/build",
    "build",
    "build-dist",
    "replay",
    "examples",
    "website",
    "core/injected-scripts",
    "emulate-browsers/base/injected-scripts",
    "emulate-browsers/**/data"
  ]
}
