{
  "compilerOptions": {
    "outDir": "../build/replay",
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ESNext", "ES2019", "DOM", "DOM.Iterable", "ScriptHost"],
    "moduleResolution": "node",
    "strict": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "~frontend/*": ["frontend/src/*"],
      "~backend/*": ["backend/*"],
      "~shared/*": ["shared/*"],
      "~install/*": ["install/*"]
    }
  },
  "include": [
    "backend/**/*.ts",
    "vue.config.ts",
    "injected-scripts/**/*.ts",
    "shared/**/*.ts",
    "frontend/src/constants",
    "app.ts",
    "bin.ts",
    "index.ts",
    "install/*.ts",
    ".eslintrc.js"
  ],
  "exclude": ["dist", "node_modules", "**/node_modules"]
}
