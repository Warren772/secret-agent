{
  "extends": "../../../tsconfig.json",
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "noImplicitAny": false,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true,
    "allowJs": true
  },
  "references": [],
  "include": ["*.ts", "*.js", ".eslintrc.js"],
  "exclude": [
    "**/tsconfig*.json",
    "**/node_modules",
    "**/dist",
    "**/build*",
    "**/replay",
    "**/website",
    "**/injected-scripts"
  ]
}
